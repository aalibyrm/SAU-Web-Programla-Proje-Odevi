@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-speedometer2 me-2"></i>Dashboard</h2>
    <span class="text-muted">@DateTime.Now.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))</span>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card stats-card bg-primary">
            <div class="card-body">
                <h6 class="text-white-50">Toplam Üye</h6>
                <h2 class="mb-0">@Model.TotalMembers</h2>
                <i class="bi bi-people stats-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stats-card bg-success">
            <div class="card-body">
                <h6 class="text-white-50">Antrenör</h6>
                <h2 class="mb-0">@Model.TotalTrainers</h2>
                <i class="bi bi-person-badge stats-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stats-card bg-warning">
            <div class="card-body">
                <h6 class="text-white-50">Bekleyen Randevu</h6>
                <h2 class="mb-0">@Model.PendingAppointments</h2>
                <i class="bi bi-clock stats-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stats-card bg-info">
            <div class="card-body">
                <h6 class="text-white-50">Bugünkü Randevu</h6>
                <h2 class="mb-0">@Model.TodayAppointments</h2>
                <i class="bi bi-calendar-check stats-icon"></i>
            </div>
        </div>
    </div>
</div>

<!-- Revenue Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Toplam Gelir</h6>
                        <h3 class="text-success mb-0">
                            @Model.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                        </h3>
                    </div>
                    <i class="bi bi-cash-stack text-success" style="font-size: 2.5rem;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Bu Ay Gelir</h6>
                        <h3 class="text-primary mb-0">
                            @Model.MonthlyRevenue.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                        </h3>
                    </div>
                    <i class="bi bi-graph-up-arrow text-primary" style="font-size: 2.5rem;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Recent Appointments -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Son Randevular</h5>
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Tümünü Gör
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Hizmet</th>
                                    <th>Antrenör</th>
                                    <th>Durum</th>
                                    <th>Ücret</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>
                                            @appointment.AppointmentDate.ToString("dd.MM.yyyy")
                                            <small class="text-muted d-block">@appointment.StartTime.ToString(@"hh\:mm")</small>
                                        </td>
                                        <td>@appointment.ServiceName</td>
                                        <td>@appointment.TrainerName</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                                @GetStatusName(appointment.Status)
                                            </span>
                                        </td>
                                        <td class="fw-bold">@appointment.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted py-4 mb-0">Henüz randevu bulunmuyor.</p>
                }
            </div>
        </div>
    </div>
    
    <!-- Top Trainers -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>En İyi Antrenörler</h5>
            </div>
            <div class="card-body">
                @if (Model.TopTrainers.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var trainer in Model.TopTrainers)
                        {
                            <li class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                <div>
                                    <h6 class="mb-1">@trainer.TrainerName</h6>
                                    <small class="text-muted">@trainer.TotalAppointments randevu</small>
                                </div>
                                <span class="badge bg-success">
                                    @trainer.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                                </span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center text-muted mb-0">Veri bulunamadı.</p>
                }
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Trainers" asp-action="Create" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>Yeni Antrenör
                    </a>
                    <a asp-controller="Services" asp-action="Create" class="btn btn-outline-success">
                        <i class="bi bi-plus-circle me-2"></i>Yeni Hizmet
                    </a>
                    <a asp-controller="Appointments" asp-action="Index" asp-route-status="Pending" class="btn btn-outline-warning">
                        <i class="bi bi-clock me-2"></i>Bekleyen Randevular
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Pending => "badge-pending",
            AppointmentStatus.Approved => "badge-approved",
            AppointmentStatus.Cancelled => "badge-cancelled",
            AppointmentStatus.Completed => "badge-completed",
            AppointmentStatus.Rejected => "badge-rejected",
            _ => "bg-secondary"
        };
    }
    
    string GetStatusName(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Pending => "Beklemede",
            AppointmentStatus.Approved => "Onaylandı",
            AppointmentStatus.Cancelled => "İptal",
            AppointmentStatus.Completed => "Tamamlandı",
            AppointmentStatus.Rejected => "Reddedildi",
            _ => status.ToString()
        };
    }
}



