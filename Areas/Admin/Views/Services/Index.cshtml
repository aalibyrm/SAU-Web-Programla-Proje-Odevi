@model IEnumerable<Service>
@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-grid me-2"></i>Hizmetler</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Hizmet Adı</th>
                        <th>Kategori</th>
                        <th>Süre</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>
                                <strong>@service.Name</strong>
                                <small class="d-block text-muted">@service.Description?.Substring(0, Math.Min(50, service.Description?.Length ?? 0))...</small>
                            </td>
                            <td><span class="badge bg-secondary">@service.Category</span></td>
                            <td>@service.DurationMinutes dk</td>
                            <td class="fw-bold text-danger">
                                @service.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-info" title="Detay">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-outline-primary" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



