@model Service
@{
    ViewData["Title"] = "Yeni Hizmet";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-plus-circle me-2"></i>Yeni Hizmet</h2>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<ServiceCategory>()" class="form-select">
                        <option value="">-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DurationMinutes" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="DurationMinutes" class="form-control" type="number" />
                        <span class="input-group-text">dakika</span>
                    </div>
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">TL</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="GymId" class="form-label">Spor Salonu</label>
                    <select asp-for="GymId" asp-items="ViewBag.Gyms" class="form-select">
                        <option value="">-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" checked />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-2"></i>Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

