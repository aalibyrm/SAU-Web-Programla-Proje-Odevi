@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Üyeler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge me-2"></i>Üyeler</h2>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Telefon</th>
                        <th>Kayıt Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>
                                <strong>@member.FullName</strong>
                            </td>
                            <td>@member.Email</td>
                            <td>@member.PhoneNumber</td>
                            <td>@member.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (member.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@member.Id" class="btn btn-outline-info" title="Detay">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form asp-action="ToggleStatus" asp-route-id="@member.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn @(member.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                title="@(member.IsActive ? "Pasif Yap" : "Aktif Yap")">
                                            <i class="bi @(member.IsActive ? "bi-pause" : "bi-play")"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



