@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Randevular";
    var currentStatus = ViewBag.CurrentStatus as AppointmentStatus?;
    var currentDate = ViewBag.CurrentDate as DateTime?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>Randevular</h2>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Durum</label>
                <select name="status" class="form-select">
                    <option value="">Tümü</option>
                    @foreach (AppointmentStatus status in Enum.GetValues(typeof(AppointmentStatus)))
                    {
                        <option value="@status" selected="@(currentStatus == status)">@GetStatusName(status)</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Tarih</label>
                <input type="date" name="date" class="form-control" value="@currentDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-2"></i>Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Temizle</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Üye</th>
                        <th>Antrenör</th>
                        <th>Hizmet</th>
                        <th>Tarih/Saat</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>#@appointment.Id</td>
                            <td>
                                <strong>@appointment.User?.FullName</strong>
                                <small class="d-block text-muted">@appointment.User?.Email</small>
                            </td>
                            <td>@appointment.Trainer?.FullName</td>
                            <td>@appointment.Service?.Name</td>
                            <td>
                                @appointment.AppointmentDate.ToString("dd.MM.yyyy")
                                <small class="d-block text-muted">
                                    @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                </small>
                            </td>
                            <td class="fw-bold">
                                @appointment.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                    @GetStatusName(appointment.Status)
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    @if (appointment.Status == AppointmentStatus.Pending)
                                    {
                                        <form asp-action="Approve" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-success" title="Onayla">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                        <form asp-action="Reject" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger" title="Reddet">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    }
                                    @if (appointment.Status == AppointmentStatus.Approved)
                                    {
                                        <form asp-action="Complete" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-info" title="Tamamla">
                                                <i class="bi bi-check-all"></i>
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary" title="Detay">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Pending => "badge-pending",
            AppointmentStatus.Approved => "badge-approved",
            AppointmentStatus.Cancelled => "badge-cancelled",
            AppointmentStatus.Completed => "badge-completed",
            AppointmentStatus.Rejected => "badge-rejected",
            _ => "bg-secondary"
        };
    }
    
    string GetStatusName(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Pending => "Beklemede",
            AppointmentStatus.Approved => "Onaylandı",
            AppointmentStatus.Cancelled => "İptal",
            AppointmentStatus.Completed => "Tamamlandı",
            AppointmentStatus.Rejected => "Reddedildi",
            _ => status.ToString()
        };
    }
}


