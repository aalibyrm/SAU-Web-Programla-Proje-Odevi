@model SporSalonu.Models.ViewModels.RandevuListeViewModel
@{
    ViewData["Title"] = "Randevularım";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check me-2"></i>Randevularım</h2>
        <a asp-action="Al" class="btn btn-ozel">
            <i class="bi bi-plus-lg me-1"></i>Yeni Randevu Al
        </a>
    </div>

    <!-- İstatistikler -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card kart-ozel bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-0 text-white-50">Toplam Randevu</p>
                            <h3 class="mb-0">@Model.ToplamRandevu</h3>
                        </div>
                        <i class="bi bi-calendar3 opacity-50" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card kart-ozel bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-0 opacity-75">Bekleyen</p>
                            <h3 class="mb-0">@Model.BekleyenRandevu</h3>
                        </div>
                        <i class="bi bi-hourglass-split opacity-50" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card kart-ozel bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-0 text-white-50">Tamamlanan</p>
                            <h3 class="mb-0">@Model.TamamlananRandevu</h3>
                        </div>
                        <i class="bi bi-check-circle opacity-50" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Randevu Listesi -->
    @if (Model.Randevular.Any())
    {
        <div class="card kart-ozel">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Hizmet</th>
                                <th>Antrenör</th>
                                <th>Ücret</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var randevu in Model.Randevular)
                            {
                                <tr>
                                    <td>
                                        <strong>@randevu.Tarih.ToString("dd MMM yyyy")</strong>
                                        <br><small class="text-muted">@randevu.Tarih.ToString("dddd")</small>
                                    </td>
                                    <td>
                                        @randevu.BaslangicSaati.ToString(@"hh\:mm") - @randevu.BitisSaati.ToString(@"hh\:mm")
                                    </td>
                                    <td>@randevu.HizmetAdi</td>
                                    <td>@randevu.AntrenorAdi</td>
                                    <td>@randevu.Ucret.ToString("C")</td>
                                    <td>
                                        @switch (randevu.Durum)
                                        {
                                            case SporSalonu.Models.RandevuDurumu.Beklemede:
                                                <span class="badge bg-warning text-dark">Beklemede</span>
                                                break;
                                            case SporSalonu.Models.RandevuDurumu.Onaylandi:
                                                <span class="badge bg-success">Onaylandı</span>
                                                break;
                                            case SporSalonu.Models.RandevuDurumu.IptalEdildi:
                                                <span class="badge bg-danger">İptal Edildi</span>
                                                break;
                                            case SporSalonu.Models.RandevuDurumu.Tamamlandi:
                                                <span class="badge bg-info">Tamamlandı</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (randevu.Durum == SporSalonu.Models.RandevuDurumu.Beklemede || 
                                             randevu.Durum == SporSalonu.Models.RandevuDurumu.Onaylandi)
                                        {
                                            <form asp-action="Iptal" asp-route-id="@randevu.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-x-circle"></i> İptal
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card kart-ozel">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3">Henüz randevunuz bulunmuyor</h5>
                <p class="text-muted">Hemen bir randevu alarak başlayın!</p>
                <a asp-action="Al" class="btn btn-ozel">
                    <i class="bi bi-plus-lg me-1"></i>Randevu Al
                </a>
            </div>
        </div>
    }
</div>


