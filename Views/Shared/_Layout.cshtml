@using Microsoft.AspNetCore.Identity
@inject SignInManager<SporSalonu.Models.Uye> SignInManager
@inject UserManager<SporSalonu.Models.Uye> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gold Fitness Spor Merkezi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --renk-ana: #2563eb;
            --renk-ikincil: #1e40af;
            --renk-vurgu: #f59e0b;
            --renk-basari: #10b981;
            --renk-arka: #f8fafc;
        }
        
        body {
            background-color: var(--renk-arka);
            font-family: 'Segoe UI', system-ui, sans-serif;
        }
        
        .navbar-marka {
            background: linear-gradient(135deg, var(--renk-ana), var(--renk-ikincil));
        }
        
        .navbar-marka .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
        }
        
        .btn-ozel {
            background: linear-gradient(135deg, var(--renk-ana), var(--renk-ikincil));
            border: none;
            color: white;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .btn-ozel:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
            color: white;
        }
        
        .btn-vurgu {
            background: linear-gradient(135deg, var(--renk-vurgu), #d97706);
            border: none;
            color: white;
        }
        
        .btn-vurgu:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            color: white;
        }
        
        .kart-ozel {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .kart-ozel:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }
        
        .footer-ozel {
            background: linear-gradient(135deg, #1e293b, #0f172a);
        }
        
        .bildirim-basari {
            background: linear-gradient(135deg, var(--renk-basari), #059669);
            color: white;
            border: none;
        }
        
        .bildirim-hata {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            border: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-marka sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill me-2"></i>Gold Fitness
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Hizmetler">
                                <i class="bi bi-list-check me-1"></i>Hizmetler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Antrenorler">
                                <i class="bi bi-people me-1"></i>Antrenörler
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Randevu" asp-action="Index">
                                    <i class="bi bi-calendar-check me-1"></i>Randevularım
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="YapayZeka" asp-action="Index">
                                    <i class="bi bi-robot me-1"></i>AI Öneri
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Iletisim">
                                <i class="bi bi-envelope me-1"></i>İletişim
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Yonetim" asp-action="Index">
                                        <i class="bi bi-gear-fill me-1"></i>Admin Panel
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name?.Split('@')[0]
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Hesap" asp-action="Profil"><i class="bi bi-person me-2"></i>Profilim</a></li>
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Index"><i class="bi bi-calendar me-2"></i>Randevularım</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Hesap" asp-action="Cikis" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Hesap" asp-action="Giris">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-vurgu btn-sm ms-2" asp-controller="Hesap" asp-action="Kayit">
                                    <i class="bi bi-person-plus me-1"></i>Üye Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="pb-4">
        <div class="container mt-3">
            @if (TempData["Basari"] != null)
            {
                <div class="alert bildirim-basari alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Basari"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Hata"] != null)
            {
                <div class="alert bildirim-hata alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Hata"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Bilgi"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle me-2"></i>@TempData["Bilgi"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
        @RenderBody()
    </main>

    <footer class="footer-ozel text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5><i class="bi bi-heart-pulse-fill me-2"></i>Gold Fitness</h5>
                    <p class="text-muted small">Sağlıklı yaşam için profesyonel fitness hizmetleri.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Hızlı Linkler</h6>
                    <ul class="list-unstyled small">
                        <li><a href="@Url.Action("Hizmetler", "Home")" class="text-muted text-decoration-none">Hizmetlerimiz</a></li>
                        <li><a href="@Url.Action("Antrenorler", "Home")" class="text-muted text-decoration-none">Antrenörler</a></li>
                        <li><a href="@Url.Action("Iletisim", "Home")" class="text-muted text-decoration-none">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>İletişim</h6>
                    <p class="text-muted small mb-1"><i class="bi bi-geo-alt me-2"></i>Sakarya Üniversitesi Kampüsü</p>
                    <p class="text-muted small mb-1"><i class="bi bi-telephone me-2"></i>0264 123 45 67</p>
                    <p class="text-muted small"><i class="bi bi-envelope me-2"></i>info@goldfitness.com</p>
                </div>
            </div>
            <hr class="border-secondary">
            <p class="text-center text-muted small mb-0">
                &copy; @DateTime.Now.Year Gold Fitness - Web Programlama Projesi
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
