@model IEnumerable<FitnessCenter.Models.Service>
@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-grid me-3"></i>Hizmetlerimiz</h1>
        <p class="text-muted mb-0">Size en uygun programı seçin</p>
    </div>
</div>

<div class="container py-4">
    <!-- Kategori Filtreleme -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group flex-wrap" role="group">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary active">Tümü</a>
                @foreach (FitnessCenter.Models.ServiceCategory category in Enum.GetValues(typeof(FitnessCenter.Models.ServiceCategory)))
                {
                    <a href="#" class="btn btn-outline-secondary filter-btn" data-category="@category">
                        @GetCategoryName(category)
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row g-4" id="servicesGrid">
        @foreach (var service in Model)
        {
            <div class="col-md-6 col-lg-4 service-item" data-category="@service.Category">
                <div class="card service-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="service-icon">
                                <i class="bi @GetServiceIcon(service.Category)"></i>
                            </div>
                            <span class="badge bg-secondary">@GetCategoryName(service.Category)</span>
                        </div>
                        <h5 class="card-title fw-bold">@service.Name</h5>
                        <p class="card-text text-muted">@service.Description</p>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-clock me-1 text-muted"></i>
                                <span class="text-muted">@service.DurationMinutes dakika</span>
                            </div>
                            <span class="price-tag">
                                @service.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                            </span>
                        </div>
                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-primary w-100">
                                <i class="bi bi-info-circle me-2"></i>Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const category = this.dataset.category;
                
                document.querySelectorAll('.filter-btn, .btn-group a').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                document.querySelectorAll('.service-item').forEach(item => {
                    if (category === 'all' || item.dataset.category === category) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    </script>
}

@functions {
    string GetServiceIcon(FitnessCenter.Models.ServiceCategory category)
    {
        return category switch
        {
            FitnessCenter.Models.ServiceCategory.Fitness => "bi-lightning-charge",
            FitnessCenter.Models.ServiceCategory.Yoga => "bi-flower1",
            FitnessCenter.Models.ServiceCategory.Pilates => "bi-person-arms-up",
            FitnessCenter.Models.ServiceCategory.Cardio => "bi-heart-pulse",
            FitnessCenter.Models.ServiceCategory.PersonalTraining => "bi-person-badge",
            FitnessCenter.Models.ServiceCategory.GroupClass => "bi-people",
            FitnessCenter.Models.ServiceCategory.Swimming => "bi-water",
            FitnessCenter.Models.ServiceCategory.Kickbox => "bi-hand-thumbs-up",
            _ => "bi-star"
        };
    }
    
    string GetCategoryName(FitnessCenter.Models.ServiceCategory category)
    {
        return category switch
        {
            FitnessCenter.Models.ServiceCategory.Fitness => "Fitness",
            FitnessCenter.Models.ServiceCategory.Yoga => "Yoga",
            FitnessCenter.Models.ServiceCategory.Pilates => "Pilates",
            FitnessCenter.Models.ServiceCategory.Cardio => "Kardio",
            FitnessCenter.Models.ServiceCategory.PersonalTraining => "Kişisel Antrenman",
            FitnessCenter.Models.ServiceCategory.GroupClass => "Grup Dersi",
            FitnessCenter.Models.ServiceCategory.Swimming => "Yüzme",
            FitnessCenter.Models.ServiceCategory.Kickbox => "Kickbox",
            _ => "Diğer"
        };
    }
}



