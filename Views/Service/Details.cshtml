@model FitnessCenter.Models.Service
@{
    ViewData["Title"] = Model.Name;
}

<div class="page-header">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white-50">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Service" asp-action="Index" class="text-white-50">Hizmetler</a></li>
                <li class="breadcrumb-item active text-white">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h2 class="fw-bold mb-2">@Model.Name</h2>
                            <span class="badge bg-secondary">@Model.Category.ToString()</span>
                        </div>
                        <span class="price-tag fs-3">
                            @Model.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                        </span>
                    </div>
                    
                    <p class="lead">@Model.Description</p>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Hizmet Detayları</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-clock text-danger me-2"></i>
                                    <strong>Süre:</strong> @Model.DurationMinutes dakika
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-tag text-danger me-2"></i>
                                    <strong>Kategori:</strong> @Model.Category
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-building text-danger me-2"></i>
                                    <strong>Salon:</strong> @Model.Gym?.Name
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            @if (Model.TrainerServices?.Any() == true)
                            {
                                <h6 class="text-muted mb-3">Bu Hizmeti Veren Antrenörler</h6>
                                <ul class="list-unstyled">
                                    @foreach (var ts in Model.TrainerServices.Where(ts => ts.Trainer?.IsActive == true))
                                    {
                                        <li class="mb-2">
                                            <a asp-controller="Trainer" asp-action="Details" asp-route-id="@ts.Trainer!.Id" class="text-decoration-none">
                                                <i class="bi bi-person text-danger me-2"></i>@ts.Trainer.FullName
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="bi bi-calendar-plus me-2"></i>Randevu Al
                    </h5>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <p class="text-muted">Bu hizmet için hemen randevu alın.</p>
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-danger w-100">
                            <i class="bi bi-calendar-check me-2"></i>Randevu Oluştur
                        </a>
                    }
                    else
                    {
                        <p class="text-muted">Randevu almak için giriş yapmalısınız.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-danger w-100 mb-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light w-100">
                            <i class="bi bi-person-plus me-2"></i>Üye Ol
                        </a>
                    }
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="mb-3"><i class="bi bi-info-circle me-2"></i>Bilgilendirme</h6>
                    <ul class="list-unstyled text-muted small mb-0">
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Profesyonel eğitmenler</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Modern ekipmanlar</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Kişiselleştirilmiş program</li>
                        <li><i class="bi bi-check text-success me-2"></i>Esnek randevu saatleri</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

