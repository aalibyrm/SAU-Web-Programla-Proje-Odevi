@model FitnessCenter.Models.Trainer
@{
    ViewData["Title"] = Model.FullName;
}

<div class="page-header">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white-50">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Trainer" asp-action="Index" class="text-white-50">Antrenörler</a></li>
                <li class="breadcrumb-item active text-white">@Model.FullName</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.FullName" class="rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <i class="bi bi-person-circle text-secondary mb-3" style="font-size: 150px;"></i>
                    }
                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted mb-3">
                        <i class="bi bi-award text-danger me-1"></i>
                        @Model.ExperienceYears Yıl Deneyim
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p class="mb-1">
                            <i class="bi bi-envelope text-danger me-2"></i>
                            <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <p>
                            <i class="bi bi-telephone text-danger me-2"></i>
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a>
                        </p>
                    }
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-calendar-check text-danger me-2"></i>Müsaitlik Saatleri
                    </h6>
                    @if (Model.Availabilities?.Any() == true)
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var availability in Model.Availabilities.Where(a => a.IsActive).OrderBy(a => a.DayOfWeek))
                            {
                                <li class="mb-2 d-flex justify-content-between">
                                    <span>@GetDayName(availability.DayOfWeek)</span>
                                    <span class="text-muted">
                                        @availability.StartTime.ToString(@"hh\:mm") - @availability.EndTime.ToString(@"hh\:mm")
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Müsaitlik bilgisi bulunamadı.</p>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-person-lines-fill text-danger me-2"></i>Hakkında
                    </h5>
                    <p>@(Model.Biography ?? "Biyografi bilgisi henüz eklenmemiş.")</p>
                    
                    <hr>
                    
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-stars text-danger me-2"></i>Uzmanlık Alanları
                    </h5>
                    <p>@Model.Specializations</p>
                    
                    @if (Model.TrainerServices?.Any() == true)
                    {
                        <hr>
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-grid text-danger me-2"></i>Verdiği Hizmetler
                        </h5>
                        <div class="row g-3">
                            @foreach (var ts in Model.TrainerServices)
                            {
                                <div class="col-md-6">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="fw-bold mb-2">@ts.Service?.Name</h6>
                                            <p class="small text-muted mb-2">@ts.Service?.Description</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-secondary">@ts.Service?.DurationMinutes dk</span>
                                                <span class="fw-bold text-danger">
                                                    @ts.Service?.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            
            <div class="card mt-3 bg-dark text-white">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-calendar-plus me-2"></i>Bu Antrenörle Randevu Al
                    </h5>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <p class="text-muted">@Model.FullName ile hemen randevu oluşturun.</p>
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-danger">
                            <i class="bi bi-calendar-check me-2"></i>Randevu Oluştur
                        </a>
                    }
                    else
                    {
                        <p class="text-muted">Randevu almak için giriş yapmalısınız.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-danger me-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">
                            <i class="bi bi-person-plus me-2"></i>Üye Ol
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetDayName(DayOfWeek day)
    {
        return day switch
        {
            DayOfWeek.Monday => "Pazartesi",
            DayOfWeek.Tuesday => "Salı",
            DayOfWeek.Wednesday => "Çarşamba",
            DayOfWeek.Thursday => "Perşembe",
            DayOfWeek.Friday => "Cuma",
            DayOfWeek.Saturday => "Cumartesi",
            DayOfWeek.Sunday => "Pazar",
            _ => day.ToString()
        };
    }
}



