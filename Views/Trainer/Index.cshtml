@model IEnumerable<FitnessCenter.Models.Trainer>
@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-people me-3"></i>Antrenörlerimiz</h1>
        <p class="text-muted mb-0">Uzman kadromuzla tanışın</p>
    </div>
</div>

<div class="container py-4">
    <div class="row g-4">
        @foreach (var trainer in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card trainer-card h-100">
                    <div class="trainer-image">
                        @if (!string.IsNullOrEmpty(trainer.ProfileImageUrl))
                        {
                            <img src="@trainer.ProfileImageUrl" alt="@trainer.FullName">
                        }
                        else
                        {
                            <i class="bi bi-person-circle"></i>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@trainer.FullName</h5>
                        <p class="text-muted mb-2">
                            <i class="bi bi-award me-1 text-danger"></i>
                            @trainer.ExperienceYears Yıl Deneyim
                        </p>
                        <p class="card-text small mb-3">
                            <strong>Uzmanlık:</strong> @trainer.Specializations
                        </p>
                        
                        @if (trainer.TrainerServices?.Any() == true)
                        {
                            <div class="mb-3">
                                @foreach (var ts in trainer.TrainerServices.Take(3))
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">@ts.Service?.Name</span>
                                }
                            </div>
                        }
                        
                        <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-outline-primary w-100">
                            <i class="bi bi-person me-2"></i>Profili Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



