@model IEnumerable<FitnessCenter.Models.ViewModels.AppointmentListViewModel>
@{
    ViewData["Title"] = "Randevularım";
}

<div class="page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="bi bi-calendar-check me-3"></i>Randevularım</h1>
                <p class="text-muted mb-0">Tüm randevularınızı görüntüleyin</p>
            </div>
            <a asp-action="Create" class="btn btn-danger">
                <i class="bi bi-plus-lg me-2"></i>Yeni Randevu
            </a>
        </div>
    </div>
</div>

<div class="container py-4">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-calendar text-danger me-2"></i>
                                @appointment.AppointmentDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                <i class="bi bi-clock text-muted me-1"></i>
                                @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                            </td>
                            <td>@appointment.ServiceName</td>
                            <td>@appointment.TrainerName</td>
                            <td class="fw-bold">
                                @appointment.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                    @GetStatusName(appointment.Status)
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (appointment.Status == FitnessCenter.Models.AppointmentStatus.Pending ||
                                    appointment.Status == FitnessCenter.Models.AppointmentStatus.Approved)
                                {
                                    <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Henüz randevunuz bulunmuyor</h4>
            <p class="text-muted">Hemen yeni bir randevu oluşturun!</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Randevu Oluştur
            </a>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(FitnessCenter.Models.AppointmentStatus status)
    {
        return status switch
        {
            FitnessCenter.Models.AppointmentStatus.Pending => "badge-pending",
            FitnessCenter.Models.AppointmentStatus.Approved => "badge-approved",
            FitnessCenter.Models.AppointmentStatus.Cancelled => "badge-cancelled",
            FitnessCenter.Models.AppointmentStatus.Completed => "badge-completed",
            FitnessCenter.Models.AppointmentStatus.Rejected => "badge-rejected",
            _ => "bg-secondary"
        };
    }
    
    string GetStatusName(FitnessCenter.Models.AppointmentStatus status)
    {
        return status switch
        {
            FitnessCenter.Models.AppointmentStatus.Pending => "Beklemede",
            FitnessCenter.Models.AppointmentStatus.Approved => "Onaylandı",
            FitnessCenter.Models.AppointmentStatus.Cancelled => "İptal Edildi",
            FitnessCenter.Models.AppointmentStatus.Completed => "Tamamlandı",
            FitnessCenter.Models.AppointmentStatus.Rejected => "Reddedildi",
            _ => status.ToString()
        };
    }
}


