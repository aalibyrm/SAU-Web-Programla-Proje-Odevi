@model FitnessCenter.Models.Appointment
@{
    ViewData["Title"] = "Randevu Detayı";
}

<div class="page-header">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white-50">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-white-50">Randevularım</a></li>
                <li class="breadcrumb-item active text-white">Randevu Detayı</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check me-2"></i>Randevu #@Model.Id
                        </h5>
                        <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">
                            @GetStatusName(Model.Status)
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted mb-2">Tarih ve Saat</h6>
                            <p class="fs-5 mb-1">
                                <i class="bi bi-calendar text-danger me-2"></i>
                                @Model.AppointmentDate.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))
                            </p>
                            <p class="fs-5">
                                <i class="bi bi-clock text-danger me-2"></i>
                                @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
                            </p>
                        </div>
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted mb-2">Ücret</h6>
                            <p class="fs-3 fw-bold text-danger mb-0">
                                @Model.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                            </p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted mb-2">Hizmet</h6>
                            <p class="fw-bold mb-1">@Model.Service?.Name</p>
                            <p class="text-muted small mb-0">@Model.Service?.Description</p>
                        </div>
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted mb-2">Antrenör</h6>
                            <p class="fw-bold mb-1">@Model.Trainer?.FullName</p>
                            <p class="text-muted small mb-0">@Model.Trainer?.Specializations</p>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr>
                        <h6 class="text-muted mb-2">Notlar</h6>
                        <p class="mb-0">@Model.Notes</p>
                    }
                    
                    <hr>
                    
                    <div class="row text-muted small">
                        <div class="col-md-6">
                            <i class="bi bi-clock-history me-1"></i>
                            Oluşturulma: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6">
                                <i class="bi bi-pencil me-1"></i>
                                Güncelleme: @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </a>
                        @if (Model.Status == FitnessCenter.Models.AppointmentStatus.Pending ||
                            Model.Status == FitnessCenter.Models.AppointmentStatus.Approved)
                        {
                            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-x-lg me-2"></i>Randevuyu İptal Et
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(FitnessCenter.Models.AppointmentStatus status)
    {
        return status switch
        {
            FitnessCenter.Models.AppointmentStatus.Pending => "badge-pending",
            FitnessCenter.Models.AppointmentStatus.Approved => "badge-approved",
            FitnessCenter.Models.AppointmentStatus.Cancelled => "badge-cancelled",
            FitnessCenter.Models.AppointmentStatus.Completed => "badge-completed",
            FitnessCenter.Models.AppointmentStatus.Rejected => "badge-rejected",
            _ => "bg-secondary"
        };
    }
    
    string GetStatusName(FitnessCenter.Models.AppointmentStatus status)
    {
        return status switch
        {
            FitnessCenter.Models.AppointmentStatus.Pending => "Beklemede",
            FitnessCenter.Models.AppointmentStatus.Approved => "Onaylandı",
            FitnessCenter.Models.AppointmentStatus.Cancelled => "İptal Edildi",
            FitnessCenter.Models.AppointmentStatus.Completed => "Tamamlandı",
            FitnessCenter.Models.AppointmentStatus.Rejected => "Reddedildi",
            _ => status.ToString()
        };
    }
}


