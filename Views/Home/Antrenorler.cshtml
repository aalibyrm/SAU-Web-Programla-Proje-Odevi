@model IEnumerable<SporSalonu.Models.Antrenor>
@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Uzman Antrenörlerimiz</h2>
        <p class="text-muted">Deneyimli kadromuzla tanışın</p>
    </div>

    <div class="row g-4">
        @foreach (var antrenor in Model)
        {
            <div class="col-md-4">
                <div class="card kart-ozel h-100 text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 120px; height: 120px;">
                            <i class="bi bi-person-fill text-primary" style="font-size: 3.5rem;"></i>
                        </div>
                        
                        <h4 class="card-title">@antrenor.TamAd</h4>
                        
                        <p class="text-muted mb-3">
                            <i class="bi bi-award me-1 text-warning"></i>@antrenor.UzmanlikAlanlari
                        </p>
                        
                        <div class="d-flex justify-content-center gap-4 mb-3">
                            <div>
                                <i class="bi bi-clock text-info"></i>
                                <small class="d-block text-muted">Mesai Saatleri</small>
                                <strong>@antrenor.MesaiBaslangic.ToString(@"hh\:mm") - @antrenor.MesaiBitis.ToString(@"hh\:mm")</strong>
                            </div>
                        </div>

                        @if (antrenor.AntrenorHizmetleri.Any())
                        {
                            <div class="mt-3">
                                <small class="text-muted d-block mb-2">Verdiği Hizmetler:</small>
                                @foreach (var ah in antrenor.AntrenorHizmetleri)
                                {
                                    <span class="badge bg-primary me-1 mb-1">@ah.Hizmet?.Ad</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-controller="Randevu" asp-action="Al" class="btn btn-outline-primary w-100">
                            <i class="bi bi-calendar-plus me-2"></i>Randevu Al
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


