@model IEnumerable<SporSalonu.Models.Hizmet>
@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Hizmetlerimiz</h2>
        <p class="text-muted">Size en uygun programı seçin ve hemen randevu alın</p>
    </div>

    <div class="row g-4">
        @foreach (var hizmet in Model)
        {
            <div class="col-md-4">
                <div class="card kart-ozel h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h4 class="card-title mb-0">@hizmet.Ad</h4>
                            <span class="badge bg-primary fs-6">@hizmet.Ucret.ToString("C0")</span>
                        </div>
                        
                        <p class="card-text text-muted">@hizmet.Aciklama</p>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">
                                <i class="bi bi-clock me-1"></i>@hizmet.SureDakika dakika
                            </span>
                        </div>

                        @if (hizmet.AntrenorHizmetleri.Any())
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block mb-2">Bu hizmeti veren antrenörler:</small>
                                @foreach (var ah in hizmet.AntrenorHizmetleri.Take(3))
                                {
                                    <span class="badge bg-light text-dark me-1">@ah.Antrenor?.TamAd</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-controller="Randevu" asp-action="Al" class="btn btn-ozel w-100">
                            <i class="bi bi-calendar-plus me-2"></i>Randevu Al
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


