@{
    ViewData["Title"] = "Ana Sayfa";
    var salon = ViewBag.Salon as SporSalonu.Models.Salon;
    var hizmetler = ViewBag.Hizmetler as List<SporSalonu.Models.Hizmet> ?? new List<SporSalonu.Models.Hizmet>();
    var antrenorler = ViewBag.Antrenorler as List<SporSalonu.Models.Antrenor> ?? new List<SporSalonu.Models.Antrenor>();
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 50%, #1e3a8a 100%);">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Sağlıklı Yaşam İçin <br>
                    <span class="text-warning">Gold Fitness</span> Yanınızda
                </h1>
                <p class="lead mb-4">
                    Profesyonel antrenörlerimiz ve modern ekipmanlarımızla fitness hedeflerinize ulaşın. 
                    Kişiye özel programlar ve yapay zeka destekli önerilerle farkı yaşayın!
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Hesap" asp-action="Kayit" class="btn btn-warning btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Hemen Üye Ol
                    </a>
                    <a asp-controller="Home" asp-action="Hizmetler" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-list-check me-2"></i>Hizmetlerimiz
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <div class="p-4">
                    <i class="bi bi-heart-pulse display-1" style="font-size: 200px; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Özellikler -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card kart-ozel h-100 text-center p-4">
                    <div class="card-body">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title">Uzman Antrenörler</h5>
                        <p class="card-text text-muted">Alanında uzman, sertifikalı antrenörlerimizle güvenle çalışın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card kart-ozel h-100 text-center p-4">
                    <div class="card-body">
                        <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-calendar-check text-warning" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title">Kolay Randevu</h5>
                        <p class="card-text text-muted">Online randevu sistemiyle istediğiniz zaman kolayca randevu alın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card kart-ozel h-100 text-center p-4">
                    <div class="card-body">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-robot text-success" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title">AI Destekli Öneriler</h5>
                        <p class="card-text text-muted">Yapay zeka ile kişiselleştirilmiş egzersiz ve diyet önerileri alın.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hizmetlerimiz -->
@if (hizmetler.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Hizmetlerimiz</h2>
                <p class="text-muted">Size en uygun programı seçin</p>
            </div>
            <div class="row g-4">
                @foreach (var hizmet in hizmetler)
                {
                    <div class="col-md-4">
                        <div class="card kart-ozel h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title mb-0">@hizmet.Ad</h5>
                                    <span class="badge bg-primary">@hizmet.Ucret.ToString("C0")</span>
                                </div>
                                <p class="card-text text-muted small">@hizmet.Aciklama</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@hizmet.SureDakika dakika
                                    </small>
                                    <a asp-controller="Randevu" asp-action="Al" class="btn btn-sm btn-outline-primary">
                                        Randevu Al
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Hizmetler" class="btn btn-ozel">
                    Tüm Hizmetleri Gör <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>
}

<!-- Antrenörlerimiz -->
@if (antrenorler.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Antrenörlerimiz</h2>
                <p class="text-muted">Uzman kadromuzla tanışın</p>
            </div>
            <div class="row g-4 justify-content-center">
                @foreach (var antrenor in antrenorler)
                {
                    <div class="col-md-4">
                        <div class="card kart-ozel h-100 text-center">
                            <div class="card-body p-4">
                                <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                     style="width: 100px; height: 100px;">
                                    <i class="bi bi-person-fill text-white" style="font-size: 3rem;"></i>
                                </div>
                                <h5 class="card-title">@antrenor.TamAd</h5>
                                <p class="text-muted small mb-2">@antrenor.UzmanlikAlanlari</p>
                                <p class="small">
                                    <i class="bi bi-clock me-1"></i>
                                    @antrenor.MesaiBaslangic.ToString(@"hh\:mm") - @antrenor.MesaiBitis.ToString(@"hh\:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Antrenorler" class="btn btn-ozel">
                    Tüm Antrenörleri Gör <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>
}

<!-- Çalışma Saatleri -->
@if (salon != null)
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card kart-ozel">
                        <div class="card-body p-5 text-center">
                            <h3 class="fw-bold mb-4">
                                <i class="bi bi-clock me-2 text-primary"></i>Çalışma Saatlerimiz
                            </h3>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <h5 class="text-muted">Hafta İçi</h5>
                                    <p class="display-6 fw-bold text-primary">
                                        @salon.AcilisSaati.ToString(@"hh\:mm") - @salon.KapanisSaati.ToString(@"hh\:mm")
                                    </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <h5 class="text-muted">Hafta Sonu</h5>
                                    <p class="display-6 fw-bold text-primary">09:00 - 20:00</p>
                                </div>
                            </div>
                            <hr>
                            <p class="mb-0">
                                <i class="bi bi-geo-alt me-2"></i>@salon.Adres
                            </p>
                            <p class="mb-0 mt-2">
                                <i class="bi bi-telephone me-2"></i>@salon.Telefon
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="py-5" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
    <div class="container text-center text-white py-4">
        <h2 class="fw-bold mb-3">Sağlıklı Yaşama İlk Adımı Atın!</h2>
        <p class="lead mb-4">Hemen üye olun, ilk randevunuzu alın ve fitness yolculuğunuza başlayın.</p>
        <a asp-controller="Hesap" asp-action="Kayit" class="btn btn-light btn-lg">
            <i class="bi bi-rocket-takeoff me-2"></i>Ücretsiz Kayıt Ol
        </a>
    </div>
</section>
