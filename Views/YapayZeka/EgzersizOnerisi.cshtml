@model SporSalonu.Models.ViewModels.EgzersizOneriViewModel
@{
    ViewData["Title"] = "Egzersiz Programı";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card kart-ozel">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-activity me-2"></i>Egzersiz Programı Al</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EgzersizOnerisi" method="post" id="egzersizForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="BoyCm" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="BoyCm" class="form-control" type="number" placeholder="175" />
                                    <span class="input-group-text">cm</span>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <label asp-for="KiloKg" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="KiloKg" class="form-control" type="number" step="0.1" placeholder="70" />
                                    <span class="input-group-text">kg</span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="Yas" class="form-label"></label>
                                <input asp-for="Yas" class="form-control" type="number" placeholder="25" />
                            </div>
                            <div class="col-6 mb-3">
                                <label asp-for="Cinsiyet" class="form-label"></label>
                                <select asp-for="Cinsiyet" class="form-select" asp-items="Html.GetEnumSelectList<SporSalonu.Models.Cinsiyet>()">
                                    <option value="">Seçiniz</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Hedef" class="form-label fw-bold">
                                <i class="bi bi-bullseye me-1"></i>Hedefiniz
                            </label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="Hedef" id="hedefKilo" value="0" checked>
                                <label class="btn btn-outline-danger" for="hedefKilo">
                                    <i class="bi bi-fire"></i><br>Kilo Ver
                                </label>

                                <input type="radio" class="btn-check" name="Hedef" id="hedefKas" value="1">
                                <label class="btn btn-outline-success" for="hedefKas">
                                    <i class="bi bi-lightning"></i><br>Kas Yap
                                </label>

                                <input type="radio" class="btn-check" name="Hedef" id="hedefForm" value="2">
                                <label class="btn btn-outline-primary" for="hedefForm">
                                    <i class="bi bi-heart-pulse"></i><br>Formda Kal
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AktiviteSeviye" class="form-label"></label>
                            <select asp-for="AktiviteSeviye" class="form-select" asp-items="Html.GetEnumSelectList<SporSalonu.Models.ViewModels.AktiviteSeviyesi>()">
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EkBilgi" class="form-label"></label>
                            <textarea asp-for="EkBilgi" class="form-control" rows="2" 
                                      placeholder="Varsa sağlık durumunuz, sakatlıklarınız..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-ozel w-100 btn-lg" id="oneriBtn">
                            <i class="bi bi-magic me-2"></i>Program Oluştur
                        </button>
                    </form>
                </div>
            </div>
            
            <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                <i class="bi bi-arrow-left me-1"></i>Geri
            </a>
        </div>

        <div class="col-md-7">
            @if (!string.IsNullOrEmpty(Model.OneriSonucu))
            {
                <div class="card kart-ozel">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>Size Özel Program</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="program-icerik" style="white-space: pre-line;">
                            @Html.Raw(Model.OneriSonucu.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card kart-ozel bg-light h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                        <i class="bi bi-clipboard2-pulse text-muted" style="font-size: 4rem;"></i>
                        <h5 class="mt-3">Program Bekleniyor</h5>
                        <p class="text-muted text-center">Bilgilerinizi girin ve "Program Oluştur" butonuna tıklayın.<br>AI size özel bir program hazırlayacak.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('egzersizForm').addEventListener('submit', function() {
            var btn = document.getElementById('oneriBtn');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>AI Program Hazırlıyor...';
            btn.disabled = true;
        });
    </script>
}
