@model SporSalonu.Models.ViewModels.GorselDonusumViewModel
@{
    ViewData["Title"] = "Görsel Dönüşüm";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card kart-ozel">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-magic me-2"></i>AI Görsel Dönüşüm</h4>
                </div>
                <div class="card-body p-4">
                    
                    @if (!string.IsNullOrEmpty(Model.HataMesaji))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle me-2"></i>@Model.HataMesaji
                        </div>
                    }

                    <form asp-action="GorselDonusum" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Hedef" class="form-label fw-bold">
                                        <i class="bi bi-bullseye me-1"></i>Hedefiniz
                                    </label>
                                    <select asp-for="Hedef" class="form-select form-select-lg" asp-items="Html.GetEnumSelectList<SporSalonu.Models.ViewModels.HedefTipi>()">
                                    </select>
                                    <small class="text-muted">Hedefinize göre görsel oluşturulacak</small>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Fotograf" class="form-label fw-bold">
                                        <i class="bi bi-camera me-1"></i>Fotoğrafınız
                                    </label>
                                    <input asp-for="Fotograf" type="file" class="form-control form-control-lg" accept="image/jpeg,image/png,image/webp" id="fotografInput" />
                                    <small class="text-muted">JPG, PNG veya WebP (max 5MB)</small>
                                </div>

                                <!-- Önizleme -->
                                <div class="mb-4" id="onizlemeDiv" style="display: none;">
                                    <label class="form-label fw-bold">Yüklenen Fotoğraf:</label>
                                    <div class="border rounded p-2 text-center bg-light">
                                        <img id="onizlemeImg" src="" alt="Önizleme" class="img-fluid rounded" style="max-height: 300px;" />
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-danger btn-lg w-100" id="donusturBtn">
                                    <i class="bi bi-magic me-2"></i>Dönüştür
                                </button>
                            </div>

                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.YuklenenFotograf) || !string.IsNullOrEmpty(Model.DonusturulmusFotograf))
                                {
                                    <div class="row g-3">
                                        @if (!string.IsNullOrEmpty(Model.YuklenenFotograf))
                                        {
                                            <div class="col-6">
                                                <div class="card">
                                                    <div class="card-header bg-secondary text-white text-center py-2">
                                                        <small><i class="bi bi-person me-1"></i>Şimdiki Haliniz</small>
                                                    </div>
                                                    <div class="card-body p-2 text-center">
                                                        <img src="@Model.YuklenenFotograf" alt="Yüklenen" class="img-fluid rounded" style="max-height: 250px;" />
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.DonusturulmusFotograf))
                                        {
                                            <div class="col-6">
                                                <div class="card border-success">
                                                    <div class="card-header bg-success text-white text-center py-2">
                                                        <small><i class="bi bi-stars me-1"></i>Hedef Haliniz</small>
                                                    </div>
                                                    <div class="card-body p-2 text-center">
                                                        <img src="@Model.DonusturulmusFotograf" alt="Hedef" class="img-fluid rounded" style="max-height: 250px;" />
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    @if (!string.IsNullOrEmpty(Model.Aciklama))
                                    {
                                        <div class="card mt-4 border-info">
                                            <div class="card-header bg-info text-white">
                                                <i class="bi bi-lightbulb me-2"></i>AI Analizi ve Öneriler
                                            </div>
                                            <div class="card-body">
                                                <div class="ai-content">
                                                    @Html.Raw(Model.Aciklama.Replace("\n", "<br>"))
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="card bg-light h-100">
                                        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-5">
                                            <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                            <h5 class="mt-3 text-muted">Sonuç Bekleniyor</h5>
                                            <p class="text-muted small">Fotoğraf yükleyip "Dönüştür" butonuna tıklayın</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Geri
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fotoğraf önizleme
        document.getElementById('fotografInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('onizlemeImg').src = e.target.result;
                    document.getElementById('onizlemeDiv').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });

        // Form gönderilirken loading göster
        document.querySelector('form').addEventListener('submit', function() {
            var btn = document.getElementById('donusturBtn');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>AI İşliyor...';
            btn.disabled = true;
        });
    </script>
}


