@model FitnessCenter.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card auth-card">
                    <div class="card-header">
                        <h3 class="text-white mb-0">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </h3>
                        <p class="text-white-50 mb-0 mt-2">Hesabınıza giriş yapın</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3 form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </button>
                        </form>
                        
                        <hr>
                        
                        <p class="text-center mb-0">
                            Hesabınız yok mu? 
                            <a asp-action="Register" class="text-decoration-none fw-bold">Üye Ol</a>
                        </p>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">
                        <i class="bi bi-arrow-left me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


