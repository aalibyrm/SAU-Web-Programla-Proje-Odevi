@model FitnessCenter.Models.ApplicationUser
@{
    ViewData["Title"] = "Profilim";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                        {
                            <img src="@Model.ProfileImageUrl" alt="Profil" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <i class="bi bi-person-circle text-secondary" style="font-size: 150px;"></i>
                        }
                    </div>
                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted">@Model.Email</p>
                    <span class="badge bg-success">Aktif Üye</span>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title fw-bold mb-3">Hızlı Bilgiler</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-calendar3 text-danger me-2"></i>
                            Kayıt: @Model.CreatedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                        </li>
                        @if (Model.BirthDate.HasValue)
                        {
                            <li class="mb-2">
                                <i class="bi bi-gift text-danger me-2"></i>
                                Doğum: @Model.BirthDate.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </li>
                        }
                        @if (Model.Height.HasValue)
                        {
                            <li class="mb-2">
                                <i class="bi bi-rulers text-danger me-2"></i>
                                Boy: @Model.Height cm
                            </li>
                        }
                        @if (Model.Weight.HasValue)
                        {
                            <li class="mb-2">
                                <i class="bi bi-speedometer text-danger me-2"></i>
                                Kilo: @Model.Weight kg
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Profil Bilgilerini Düzenle
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label"></label>
                            <input asp-for="BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="BirthDate" class="text-danger small"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Height" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Height" class="form-control" type="number" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Height" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Weight" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Weight" class="form-control" type="number" step="0.1" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



