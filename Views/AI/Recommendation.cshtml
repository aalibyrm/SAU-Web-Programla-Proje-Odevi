@model FitnessCenter.Models.ViewModels.AIRecommendationViewModel
@{
    ViewData["Title"] = "AI Egzersiz Önerisi";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-robot me-3"></i>Yapay Zeka Egzersiz Önerisi</h1>
        <p class="text-muted mb-0">Kişiselleştirilmiş egzersiz ve beslenme programı alın</p>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="bi bi-person-vcard me-2"></i>Bilgilerinizi Girin
                    </h5>
                    
                    <form asp-action="GetRecommendation" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Height" class="form-label">
                                    <i class="bi bi-rulers me-1"></i>Boy
                                </label>
                                <div class="input-group">
                                    <input asp-for="Height" type="number" class="form-control" placeholder="170" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Height" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Weight" class="form-label">
                                    <i class="bi bi-speedometer me-1"></i>Kilo
                                </label>
                                <div class="input-group">
                                    <input asp-for="Weight" type="number" step="0.1" class="form-control" placeholder="70" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="BodyType" class="form-label">
                                <i class="bi bi-person me-1"></i>Vücut Tipi
                            </label>
                            <select asp-for="BodyType" class="form-select" asp-items="Html.GetEnumSelectList<FitnessCenter.Models.BodyType>()">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <small class="text-muted">
                                <strong>Ektomorf:</strong> İnce yapılı, hızlı metabolizma | 
                                <strong>Mezomorf:</strong> Atletik yapılı | 
                                <strong>Endomorf:</strong> Geniş yapılı
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Goal" class="form-label">
                                <i class="bi bi-bullseye me-1"></i>Hedefiniz
                            </label>
                            <select asp-for="Goal" class="form-select" asp-items="Html.GetEnumSelectList<FitnessCenter.Models.FitnessGoal>()">
                                <option value="">-- Seçiniz --</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">
                                <i class="bi bi-camera me-1"></i>Fotoğraf Yükle (İsteğe Bağlı)
                            </label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                            <small class="text-muted">Vücut analizi için fotoğraf yükleyebilirsiniz.</small>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="AdditionalInfo" class="form-label">
                                <i class="bi bi-chat-dots me-1"></i>Ek Bilgiler
                            </label>
                            <textarea asp-for="AdditionalInfo" class="form-control" rows="3" 
                                      placeholder="Sağlık durumunuz, sakatlıklarınız, tercihleriniz vb."></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-magic me-2"></i>Öneri Al
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-cpu me-2"></i>AI Nasıl Çalışır?
                    </h5>
                    <p class="text-muted">
                        Yapay zeka sistemi girdiğiniz bilgileri analiz ederek size özel bir program oluşturur.
                    </p>
                    <hr class="border-secondary">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <i class="bi bi-1-circle text-danger me-2"></i>
                            Bilgilerinizi girin
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-2-circle text-danger me-2"></i>
                            AI verilerinizi analiz eder
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-3-circle text-danger me-2"></i>
                            Kişiselleştirilmiş program oluşturur
                        </li>
                        <li>
                            <i class="bi bi-4-circle text-danger me-2"></i>
                            Egzersiz ve beslenme önerileri alın
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="mb-3"><i class="bi bi-info-circle text-primary me-2"></i>BMI Nedir?</h6>
                    <p class="text-muted small mb-2">
                        Vücut Kitle İndeksi (BMI), boy ve kilo oranınıza göre hesaplanır.
                    </p>
                    <ul class="list-unstyled text-muted small mb-0">
                        <li><span class="badge bg-info me-2">< 18.5</span>Zayıf</li>
                        <li><span class="badge bg-success me-2">18.5-24.9</span>Normal</li>
                        <li><span class="badge bg-warning me-2">25-29.9</span>Fazla Kilolu</li>
                        <li><span class="badge bg-danger me-2">≥ 30</span>Obez</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


