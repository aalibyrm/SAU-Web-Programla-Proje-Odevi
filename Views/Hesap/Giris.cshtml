@model SporSalonu.Models.ViewModels.GirisViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card kart-ozel">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-box-arrow-in-right text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="fw-bold">Giriş Yap</h3>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>

                    <form asp-action="Giris" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Eposta" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Eposta" class="form-control" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Eposta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Sifre" class="form-control" placeholder="••••••" />
                            </div>
                            <span asp-validation-for="Sifre" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="BeniHatirla" class="form-check-input" />
                                <label asp-for="BeniHatirla" class="form-check-label"></label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-ozel w-100 py-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </button>
                    </form>

                    <hr class="my-4">

                    <p class="text-center mb-0">
                        Hesabınız yok mu? 
                        <a asp-action="Kayit" class="text-decoration-none fw-bold">Üye Ol</a>
                    </p>
                </div>
            </div>

            <div class="card kart-ozel mt-3">
                <div class="card-body p-3">
                    <p class="small text-muted mb-2"><i class="bi bi-info-circle me-1"></i>Admin Hesabı:</p>
                    <p class="small mb-1"><strong>Admin:</strong> b231210068@sakarya.edu.tr / sau</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

