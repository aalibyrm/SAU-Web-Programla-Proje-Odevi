@model SporSalonu.Models.ViewModels.KayitViewModel
@{
    ViewData["Title"] = "Üye Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card kart-ozel">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-person-plus text-success" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="fw-bold">Üye Ol</h3>
                        <p class="text-muted">Yeni hesap oluşturun</p>
                    </div>

                    <form asp-action="Kayit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" placeholder="Adınız" />
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" placeholder="Soyadınız" />
                                <span asp-validation-for="Soyad" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Eposta" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Eposta" class="form-control" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Eposta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="Telefon" class="form-control" placeholder="05XX XXX XX XX" />
                            </div>
                            <span asp-validation-for="Telefon" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Sifre" class="form-control" placeholder="En az 6 karakter" />
                            </div>
                            <span asp-validation-for="Sifre" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SifreTekrar" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="SifreTekrar" class="form-control" placeholder="Şifreyi tekrar girin" />
                            </div>
                            <span asp-validation-for="SifreTekrar" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-ozel w-100 py-2">
                            <i class="bi bi-person-plus me-2"></i>Üye Ol
                        </button>
                    </form>

                    <hr class="my-4">

                    <p class="text-center mb-0">
                        Zaten üye misiniz? 
                        <a asp-action="Giris" class="text-decoration-none fw-bold">Giriş Yap</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


