@model IEnumerable<SporSalonu.Models.Antrenor>
@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-person-badge me-2"></i>Antrenör Yönetimi</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Admin Panel</a></li>
                    <li class="breadcrumb-item active">Antrenörler</li>
                </ol>
            </nav>
        </div>
        <a asp-action="AntrenorEkle" class="btn btn-ozel">
            <i class="bi bi-plus-lg me-1"></i>Yeni Antrenör Ekle
        </a>
    </div>

    <div class="row g-4">
        @foreach (var antrenor in Model)
        {
            <div class="col-md-4">
                <div class="card kart-ozel h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 60px; height: 60px;">
                                <i class="bi bi-person-fill text-primary" style="font-size: 1.5rem;"></i>
                            </div>
                            <div class="ms-3">
                                <h5 class="mb-0">@antrenor.TamAd</h5>
                                <small class="text-muted">@antrenor.Salon?.Ad</small>
                            </div>
                        </div>
                        
                        <p class="small mb-2">
                            <i class="bi bi-award me-1 text-warning"></i>
                            <strong>Uzmanlık:</strong> @antrenor.UzmanlikAlanlari
                        </p>
                        <p class="small mb-2">
                            <i class="bi bi-clock me-1 text-info"></i>
                            <strong>Mesai:</strong> @antrenor.MesaiBaslangic.ToString(@"hh\:mm") - @antrenor.MesaiBitis.ToString(@"hh\:mm")
                        </p>
                        @if (!string.IsNullOrEmpty(antrenor.Eposta))
                        {
                            <p class="small mb-2">
                                <i class="bi bi-envelope me-1 text-secondary"></i>@antrenor.Eposta
                            </p>
                        }
                        
                        <div class="mt-3">
                            <strong class="small">Verdiği Hizmetler:</strong>
                            <div class="mt-1">
                                @if (antrenor.AntrenorHizmetleri.Any())
                                {
                                    @foreach (var ah in antrenor.AntrenorHizmetleri)
                                    {
                                        <span class="badge bg-primary me-1 mb-1">@ah.Hizmet?.Ad</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Henüz hizmet atanmamış</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            @if (antrenor.AktifMi)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                            <div>
                                <a asp-action="AntrenorDuzenle" asp-route-id="@antrenor.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="AntrenorSil" asp-route-id="@antrenor.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Bu antrenörü silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


