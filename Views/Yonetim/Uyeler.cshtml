@model IEnumerable<SporSalonu.Models.Uye>
@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-people me-2"></i>Üye Yönetimi</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Admin Panel</a></li>
                    <li class="breadcrumb-item active">Üyeler</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="UyeEkle" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Yeni Üye Ekle
            </a>
        </div>
    </div>

    @if (TempData["Basari"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Basari"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Hata"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card kart-ozel">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list me-2"></i>Kayıtlı Üyeler</span>
            <span class="badge bg-primary">Toplam: @Model.Count() üye</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Kayıt Tarihi</th>
                            <th>Boy/Kilo</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">Henüz kayıtlı üye bulunmuyor.</p>
                                </td>
                            </tr>
                        }
                        @foreach (var uye in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-primary"></i>
                                        </div>
                                        <div>
                                            <strong>@uye.TamAd</strong>
                                            @if (uye.Cinsiyet.HasValue)
                                            {
                                                <br><small class="text-muted">@(uye.Cinsiyet == SporSalonu.Models.Cinsiyet.Erkek ? "Erkek" : "Kadın")</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@uye.Email">@uye.Email</a>
                                </td>
                                <td>@(uye.PhoneNumber ?? "-")</td>
                                <td>@uye.KayitTarihi.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (uye.BoyCm.HasValue && uye.KiloKg.HasValue)
                                    {
                                        <span>@uye.BoyCm cm / @uye.KiloKg kg</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="UyeDuzenle" asp-route-id="@uye.Id" 
                                           class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#silModal" 
                                                data-id="@uye.Id" 
                                                data-ad="@uye.TamAd"
                                                title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="silModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Üye Sil</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="uyeAdi"></strong> adlı üyeyi silmek istediğinize emin misiniz?</p>
                <p class="text-danger small mb-0">
                    <i class="bi bi-info-circle me-1"></i>Bu işlem geri alınamaz!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form asp-action="UyeSil" method="post" id="silForm">
                    <input type="hidden" name="id" id="silId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var silModal = document.getElementById('silModal');
        silModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var ad = button.getAttribute('data-ad');
            
            document.getElementById('silId').value = id;
            document.getElementById('uyeAdi').textContent = ad;
        });
    </script>
}
