@model SporSalonu.Models.Hizmet
@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card kart-ozel">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Hizmet Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="HizmetDuzenle" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SureDakika" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="SureDakika" class="form-control" type="number" />
                                    <span class="input-group-text">dakika</span>
                                </div>
                                <span asp-validation-for="SureDakika" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ucret" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SalonId" class="form-label"></label>
                            <select asp-for="SalonId" class="form-select" asp-items="ViewBag.Salonlar"></select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="AktifMi" class="form-check-input" />
                                <label asp-for="AktifMi" class="form-check-label"></label>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Hizmetler" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri
                            </a>
                            <button type="submit" class="btn btn-ozel">
                                <i class="bi bi-check-lg me-1"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


